{
  "manifest_version": 3,
  "name": "CCX AB Browser Extension",
  "version": "1.0.0",
  "description": "A Chrome extension to inject A/B testing scripts for tools like Dynamic Yield and Optimizely.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html"
  }
}