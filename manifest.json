{
  "manifest_version": 3,
  "name": "CCX AB Extension",
  "version": "1.0.0",
  "description": "A Chrome extension to streamline A/B testing script injection.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js", "scripts/page/detector.js", "scripts/page/networkInterceptor.js"]
    }
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": ["scripts/page/detector.js", "scripts/page/networkInterceptor.js", "scripts/*"],
      "matches": ["<all_urls>"]
    }
  ]
}