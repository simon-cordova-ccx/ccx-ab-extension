{
  "manifest_version": 3,
  "name": "CCX AB Browser Extension",
  "version": "1.0.0",
  "description": "A Chrome extension to inject A/B testing scripts for tools like Dynamic Yield, Optimizely, Adobe Target, and AB Tasty.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/page/detector.js",
        "scripts/config.json",
        "scripts/**/*.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}